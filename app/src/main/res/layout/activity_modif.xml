<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    tools:context=".activities.ModifActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="Update Student"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

            <EditText
                android:id="@+id/edt_first_name_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:lines="1"
                android:paddingTop="10dp" />

            <EditText
                android:id="@+id/edt_last_name_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:lines="1"
                android:paddingTop="10dp" />

            <EditText
                android:id="@+id/edt_email_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your@email.com"
                android:lines="1"
                android:paddingTop="10dp" />

            <EditText
                android:id="@+id/edt_grade_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Grade"
                android:lines="1"
                android:paddingTop="10dp" />

            <EditText
                android:id="@+id/edt_promotion_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex : 2005"
                android:inputType="number"
                android:lines="1"
                android:paddingTop="10dp" />

            <Button
                android:id="@+id/btn_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Update"
                android:textColor="@color/colorPrimaryDark" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_empty_name_modif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Please Type your First Name and/or  your Last Name"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_wrong_date_modif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Wrong date"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>